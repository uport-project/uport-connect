{
  "name": "uport-lib",
  "version": "0.0.0-semantic-release",
  "description": "Library for integrating uPort into your DApp",
  "main": "lib/index.js",
  "scripts": {
    "lint": "standard --verbose | snazzy",
    "build-es5": "./node_modules/.bin/babel src -d lib",
    "build-dist": "webpack --config webpack.config.js",
    "build-dist-prod": "webpack --config webpack.prod-config.js",
    "build": "npm run build-es5 && npm run build-dist && npm run build-dist-prod",
    "prepublish": "npm run build",
    "watch": "webpack --config webpack.config.js -w",
    "test": "mocha && npm run karma",
    "karma-watch": "./node_modules/.bin/karma start --browsers PhantomJS",
    "karma": "./node_modules/.bin/karma start --single-run --browsers PhantomJS",
    "karma-CI": "./node_modules/.bin/karma start --single-run",
    "gen-readme": "./node_modules/jsdoc-to-markdown/bin/cli.js --template readme-template.hbs lib/*.js node_modules/uport-persona/lib/*.js > README.md",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "release": {
    "debug": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ConsenSys/uport-lib.git"
  },
  "keywords": [
    "uport",
    "identity",
    "self-sovereign",
    "ethereum",
    "bitcoin",
    "consensys",
    "web3",
    "ipfs",
    "persona"
  ],
  "author": "Christian Lundkvist <christian.lundkvist@consensys.net> (http://consensys.net/)",
  "license": "ISC",
  "contributors": [
    {
      "name": "Christian Lundkvist",
      "email": "christian.lundkvist@consensys.net",
      "url": "http://consensys.net/"
    },
    {
      "name": "Jeff Scott Ward",
      "email": "jeffscottward@consensys.net",
      "url": "http://consensys.net/"
    },
    {
      "name": "Joel Torstensson",
      "email": "joel.torstensson@consensys.net",
      "url": "http://consensys.net/"
    }
  ],
  "bugs": {
    "url": "https://github.com/ConsenSys/uport-lib/issues"
  },
  "files": [
    "lib",
    "dist"
  ],
  "homepage": "https://github.com/ConsenSys/uport-lib#readme",
  "standard": {
    "ignore": [
      "dist/**"
    ],
    "globals": [
      "describe",
      "it",
      "before",
      "after",
      "should"
    ]
  },
  "dependencies": {
    "async": "^2.0.1",
    "is-mobile": "^0.2.2",
    "json-loader": "^0.5.4",
    "nets": "^3.2.0",
    "qr-image": "^3.1.0",
    "qs": "^6.2.1",
    "request": "^2.75.0",
    "uport-persona": "^1.2.5",
    "web3-provider-engine": "^8.0.8"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-external-helpers": "^6.8.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-register": "^6.16.3",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^3.2.2",
    "eth-lightwallet": "^2.4.3",
    "ethereumjs-testrpc": "^2.2.4",
    "ethereumjs-tx": "^1.1.1",
    "istanbul": "^0.4.5",
    "istanbul-instrumenter-loader": "0.2.0",
    "jsdoc-to-markdown": "^1.3.7",
    "json-loader": "^0.5.4",
    "karma": "^1.3.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.2.0",
    "karma-mocha-reporter": "^2.2.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-safari-launcher": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.8.0",
    "mocha": "^3.0.2",
    "reify": "^0.3.8",
    "semantic-release": "^4.3.5",
    "snazzy": "^5.0.0",
    "standard": "^8.0.0-beta.5",
    "webpack": "2.1.0-beta.15"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
